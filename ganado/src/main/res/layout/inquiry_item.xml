<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardElevation="5dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:theme="@style/GhostRiderMaterialTheme"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="5dp">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/lbl_clientName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Valencia, Maynard"
                android:layout_weight=".5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_applicantName" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/lbl_status"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fontFamily="@font/roboto_medium"
                android:text="Sent"
                android:gravity="center"
                android:layout_weight="1.5"
                android:textColor="@color/check_green"
                tools:ignore="RtlCompat" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/lbl_mobileNo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="09123456789"
                android:layout_weight=".5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_applicantName" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/lbl_recorStats"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fontFamily="@font/roboto_medium"
                android:text="Lost Sales"
                android:gravity="center"
                android:layout_weight="1.5"
                android:textColor="@color/check_green"
                tools:ignore="RtlCompat" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lbl_modelDesc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="HONDA Click 160 (BLACK)"
            android:layout_weight=".5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_applicantName" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lbl_InquiryType"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Installment"
            android:layout_weight=".5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_applicantName" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</com.google.android.material.card.MaterialCardView>