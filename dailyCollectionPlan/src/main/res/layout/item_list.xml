<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="12dp">

        <LinearLayout
            android:id="@+id/lnLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">
            <TextView
                android:id="@+id/tvPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginRight="3dp"
                android:background="@drawable/border_label"
                android:textColor="@color/guanzon_digital_orange"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvAddressTp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:background="@drawable/border_label"
                android:textColor="@color/guanzon_digital_orange"
                android:layout_toRightOf="@+id/tvPrimary"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/icDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_collection_clear"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/guanzon_dark_grey"
            android:maxLines="1"
            android:layout_below="@id/lnLabel"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDetails"
            android:layout_marginTop="2dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>